<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="clientDtoDao" class="com.epam.brest.ClientDtoDaoJDBCImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="clientDtoService" class="com.epam.brest.ClientDtoServiceImpl">
        <constructor-arg name="clientDtoDao" ref="clientDtoDao"/>
    </bean>

    <bean id="clientDao" class="com.epam.brest.ClientDAOJDBCImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="clientService" class="com.epam.brest.ClientServiceImpl">
        <constructor-arg name="clientDao" ref="clientDao"/>
    </bean>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:test-db.properties</value>
                <value>classpath*:sql-client.properties</value>
            </list>
        </property>
    </bean>
</beans>